.social {
	-webkit-transition: 0.3s ease-in-out all;
	-moz-transition: 0.3s ease-in-out all;
	-ms-transition: 0.3s ease-in-out all;
	-o-transition: 0.3s ease-in-out all;
	transition: 0.3s ease-in-out all;
	border-style: none;
	padding: 0px;
}

.social:hover {
  -webkit-transform: rotate(-25deg);
  -moz-transform: rotate(-25deg);
  -ms-transform: rotate(-25deg);
  -o-transform: rotate(-25deg);
  transform: rotate(-25deg);
}


/*----------------------------------------------NAV----------------------------------*/

.nav {
	display: block;
	font-family: 'Franklin Condensed ITC Pro';
	font-size: 39px;
	font-weight: normal;
	text-decoration: none;
	line-height: 40px;
	padding-left: 10px;
	-webkit-transition: 0.3s ease-in-out all;
	-moz-transition: 0.3s ease-in-out all;
	-ms-transition: 0.3s ease-in-out all;
	-o-transition: 0.3s ease-in-out all;
	transition: 0.3s ease-in-out all;
}

.nav:hover {
	background: #323232;
	color: #ffffff;
	margin-left: 10px;
}


/*----------------------------------------------CONTENT----------------------------------*/

#left {
	width: 225px;
	height: auto;
	float: left;
	padding: 15px 0px;
	position: fixed;
}

#right {
	width: 670px;
	float: right;
	padding: 15px 0px;
}

h2 {
	font-family: 'Franklin Condensed ITC Pro';
	font-size: 32px;
	font-weight: normal;
	display: block;
	background: #323232;
	color: #ffffff;
	line-height: 40px;
	padding-left: 10px;
}

h3,  a {
	color: #323232;
}

.section h2, .section h3 {
	text-transform: lowercase;
}

.section {
	float: left;
	width: 100%;
	height: auto;
	margin-bottom: 150px;
}


/*----------------------------------------------WEBSITES----------------------------------*/

#slider {
	width: 650px;
	min-height: 900px;
	float: left;
}

.section #slider li {
	display: block;
	width: 650px;
	min-height: 575px;
	float: left;
	margin: 0px;
	padding: 0px;
	position: relative;
}

.section li #description {
	position: absolute;
	left: 0px;
	bottom: 0px;
	width: 100%;
	height: 75px;
}


