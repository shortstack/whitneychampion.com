
@font-face { font-family: "Franklin Condensed ITC Pro"; src: url("http://wac.1ac1.edgecastcdn.net/001AC1/webtype/ff/3/38044c64-ac31-444e-8199-e193af88f4c7") format("woff"); font-style: normal; font-weight: normal;}
@import url(http://fonts.googleapis.com/css?family=Doppio+One);

body {
	font-family: 'Doppio One', sans-serif;
	text-align: justify;
	font-size: 11px;
	line-height: 22px;
	background: #ffffff url(img/bg.png) top center repeat-y;
	color: #323232;
	padding: 0px;
	margin: 0px;
}

* {
	outline: none;
}

#container {
	margin: 0px auto;
	width: 950px;
	height: auto;
}

a {
	text-decoration: underline;
}

a:hover {
	text-decoration: none;
}

/*----------------------------------------------LEFT----------------------------------*/

img.profile {
	width: 215px;
	margin-left: auto;
	margin-right: auto;
	display: block;
	margin-top: 25px;
	border-top: 5px solid #323232;
	border-bottom: 5px solid #323232;
	padding-top: 2px;
	padding-bottom: 2px;
}

